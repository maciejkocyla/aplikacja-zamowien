<%= form_for @order do |o|%>
  <%= o.fields_for :client do |f|%>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :surname %>
      <%= f.text_field :surname %>

      <%= f.label :phone, "numer telefonu"%>
      <%= f.telephone_field :phone %>

      <%= f.label :address %>
      <%= f.text_area :address, :rows => 4 %>
  <% end %>
<%= o.submit "gotowe", class: "btn btn-large btn-primary" %>
<% end %>
